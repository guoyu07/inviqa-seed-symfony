# This file is a "template" of what your parameters.yml file should look like
parameters:
    env(DATABASE_URL): '%env(DATABASE_PLATFORM)%://%env(DATABASE_USER)%:%env(DATABASE_PASSWORD)%@%env(DATABASE_HOST)%:%env(DATABASE_PORT)%/%env(DATABASE_NAME)%?charset=utf8mb4&serverVersion=%env(DATABASE_VERSION)%'
    env(DATABASE_PLATFORM): mysql
    env(DATABASE_HOST): 127.0.0.1
    env(DATABASE_PORT): 3306
    env(DATABASE_NAME): '<%= config.name %>'
    env(DATABASE_USER): '<%= config.name %>'
    env(DATABASE_PASSWORD): '<%= config.name %>'

    env(MAILER_URL): '%env(MAILER_TRANSPORT)%:%env(MAILER_HOST)%'
    env(MAILER_TRANSPORT): 'sendmail'
    env(MAILER_HOST): ~

    env(APP_SECRET): ThisTokenIsNotSoSecretChangeIt

    #legacy variables
    database_driver:   pdo_mysql
    database_host:     '%env(DATABASE_HOST)%'
    database_port:     '%env(DATABASE_PORT)%'
    database_name:     '%env(DATABASE_NAME)%'
    database_user:     '%env(DATABASE_USER)%'
    database_password: '%env(DATABASE_PASSWORD)%'

    mailer_transport:  '%env(MAILER_TRANSPORT)%'
    mailer_host:       '%env(MAILER_HOST)%'
    mailer_user:       ~
    mailer_password:   ~

    locale:            en
    secret:            '%env(APP_SECRET)%'

    debug_toolbar:          true
    debug_redirects:        false
    use_assetic_controller: true
